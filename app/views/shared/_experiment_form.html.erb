<%= form_for(@experiment) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="type">
    <%= f.radio_button :type, 'Bus' %>
    <%= label :type_label, 'Bus' %>
  </div>
  <div class="nodes">
    <%= f.number_field :nodes %>
  </div>
  <%= f.submit "Create", class: "btn btn-large btn-primary" %>
<% end %>
